.gg.add
  box-sizing border-box
  position relative
  display block
  width 22px
  height 22px
  border 1px solid
  border-radius 22px

.gg.add::after, .gg.add::before
  content ''
  display block
  box-sizing border-box
  position absolute
  width 11px
  height 1px
  background currentColor
  border-radius 5px
  top 10px
  left 5px

.gg.add::after
  width 1px
  height 11px
  top 5px
  left 10px
