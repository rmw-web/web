dialog.Pop
  /*
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0, 0, 0, 0.7)
  */
  position fixed
  display flex
  top 50%
  background none
  border none
  padding 0
  margin auto
  &>div
    position relative
    margin-top -50%
    &>i.X
      position absolute
      right -0.25rem
      top -3rem
      width 2rem
      height 2rem
      text-align center
      line-height 1rem
      color #fff
      cursor pointer
      border 1px solid #fff
      border-radius 1rem
      transform scale(0.75)
      &:after, &:before
        width 60%
        height 1px
        content ''
        position absolute
        border-top 1px solid #fff
        left 21.6%
        bottom 48%
      &:after
        transform rotate(45deg)
      &:before
        transform rotate(135deg)
      &:hover
        border-color #f40
        background #f40
        box-shadow 0 0 2px #000 inset
        &:after, &:before
          border-color #fff
          border-width 2px
  &::backdrop
    background-color rgba(0, 0, 0, 0.6)
