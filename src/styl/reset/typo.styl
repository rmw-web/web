// html *, html *:before, html *:after
// box-sizing border-box
// 
// ::selection
// background #fd2
// 
input, button
  padding 1rem

p
  &>input
    border 1px solid #d9d9d9
    color #333

    &:hover
      border-color #3889e0

    &:focus
      color #000
      outline none
      border-color #3889e0
      box-shadow 0 0 0 2px rgba(18, 105, 211, 0.2)

      &+label
        color #666

  input+label, .ant-select+label
    position absolute
    left 0.95rem
    pointer-events none
    padding 0 0.1rem
    transition all 0.2s
    color #999

  input:not(:placeholder-shown) + label, &.s>label
    font-size 0.5rem
    background #fff
    top 3.1rem

  input:not(:placeholder-shown), &.s>.ant-select
    &:hover + label, &:focus + label
      color #3889e0

  &.s>.ant-select-focused+label
    color #3889e0

html
  scroll-behavior smooth

html, body
  min-height 100%
  display flex
  background #fff
  justify-content center
  overflow hidden

body>main
  display flex
  width 100%
  height 100%
  align-items center
  justify-content center

body, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, p, blockquote, th, td, hr, article, aside, details, figcaption, figure, footer, header, menu, nav, section
  margin 0
  padding 0
